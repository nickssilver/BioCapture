<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/back2"
    >

    <TextView
        android:id="@+id/Registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Registration"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
       />

    <TextView
        android:id="@+id/Student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Registration"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Student No:"
        android:textColor="@color/white"
        android:textSize="34sp" />
    <EditText
        android:id="@+id/editTextStudentNo"
        android:layout_width="262dp"
        android:layout_height="49dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Student"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:hint="Input No.."
        android:inputType="text"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"/>
    <RelativeLayout
        android:id="@+id/frameLayout"
        android:layout_width="849dp"
        android:layout_height="520dp"
        android:layout_below="@+id/editTextStudentNo"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/rounded_corners">



        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:text="Student Name: "
            android:textColor="@color/white"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.058"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="78dp" />
        <EditText
            android:id="@+id/editTextStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginStart="270dp"
            android:ems="10"
            android:inputType="text"
            android:text=".." />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:text="Course:"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:layout_below="@+id/textView3"
            tools:layout_editor_absoluteX="36dp" />
        <EditText
            android:id="@+id/editTextCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="91dp"
            android:layout_marginStart="160dp"
            android:ems="10"
            android:inputType="text"
            android:text=".." />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:text="Department:"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:layout_below="@+id/textView5"
            tools:layout_editor_absoluteX="36dp" />
        <EditText
            android:id="@+id/editTextDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="151dp"
            android:layout_marginStart="230dp"
            android:ems="10"
            android:inputType="text"
            android:text=".." />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:text="Status:"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:layout_below="@+id/textView6"
            tools:layout_editor_absoluteX="36dp" />
        <EditText
            android:id="@+id/editTextStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:layout_marginStart="150dp"
            android:ems="10"
            android:inputType="text"
            android:text=".." />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toEndOf="@+id/textView5"
            android:layout_marginStart="260dp"
            android:layout_marginTop="90dp"
            android:text="Class:"
            android:textColor="@color/white"
            android:textSize="34sp"
            tools:layout_editor_absoluteY="144dp" />
        <EditText
            android:id="@+id/editTextClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="91dp"
            android:layout_marginStart="520dp"
            android:ems="10"
            android:inputType="text"
            android:text=".." />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="10dp"
            android:text="Add Fingerprints"
            android:textAlignment="center"
            android:layout_marginLeft="250dp"
            android:textColor="@color/white"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.499"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextText14"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="112dp"
            android:layout_marginTop="312dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:hint="Place Finger"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="550dp"
            android:layout_marginTop="450dp"
            android:text="Finger 1"
            android:textColor="@color/white"
            android:textSize="34sp" />


        <EditText
            android:id="@+id/editTextText15"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_marginTop="320dp"
            android:layout_marginStart="550dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:hint="Place Finger"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="450dp"
            android:layout_marginBottom="200dp"
            android:text="Finger 2"
            android:textColor="@color/white"
            android:textSize="34sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/buttonSubmitReg"
        android:layout_width="225dp"
        android:layout_height="82dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/frameLayout"
        android:layout_marginTop="24dp"
        android:text="Submit"
        android:textAlignment="center"
        android:textSize="34sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>