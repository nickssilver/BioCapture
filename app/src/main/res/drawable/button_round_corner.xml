<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhite"/>
            <stroke android:color="@color/colorPurple" android:width="2dp" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="50dp" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#E5E5E5"/>
            <stroke android:color="@color/colorPurple" android:width="4dp" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="50dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#E5E5E5"/>
            <stroke android:color="#999999" android:width="2dp" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="50dp" />
        </shape>
    </item>
</selector>